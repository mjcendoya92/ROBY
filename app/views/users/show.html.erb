<div class = "profile-container">
  <div class="profile-banner-container">
    <% if @user.banner_photo.attached? %>
      <%= cl_image_tag @user.banner_photo.key, class: "profile-banner-img" %>
    <% end %>
  </div>

    <div class="profile-imgs-names-container">
      <div class="profile-img-container">
        <%# profile user img %>
        <% if @user.photo.attached? %>
          <%= cl_image_tag @user.photo.key, class:"profile-user-img" %>
        <% end %>
        <%# profile user DOG img %>
        <% @user.dogs.each do |dog| %>
          <% if dog.photo.attached? %>
              <%= link_to dog_path(dog) do %>
                <%= cl_image_tag dog.photo.key, crop: :fill, class: "profile-dog-img" %>
            <% end %>
          <% end %>
        <% end %>
      </div>

      <div class ="profile-names-container profile-names-user">
        <h1 class="profile-user-name"><%= @user.name %></h1>
        <% @user.dogs.each do |dog| %>
          <h3 class="profile-dog-name"><%= dog.name %></h3>
        <% end %>
      </div>
    </div>
  </div>

    <div class = "info-cards-container">
      <div class ="index-cards profile-cards">
        <div class = "user-bio-card">
          <h2><strong>Bio:</strong></h2>
          <br>
          <h3><%= @user.bio %></h3>
        </div>
      </div>
      <div class ="index-cards profile-cards">
        <div class = "user-location-card">
          <h2><strong>Location:</strong></h2>
          <br>
          <h3><%= @user.location %></h3>
        </div>
      </div>
    </div>

<%# ------------------USER FOLLOWS--------------------%>
<% if !@follow %>

  <%= button_to "Follow this person", user_follows_path(@user), method: :post, class: "profile-buttons follow-button" %>

<%else%>
  <%= "Following" %>
<% end %>

